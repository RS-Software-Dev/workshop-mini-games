{
  "name": "slidev",
  "type": "module",
  "private": true,
  "scripts": {
    "dev:day1": "slidev day1/slides.md",
    "dev:day2": "slidev day2/slides.md",
    "dev:day3": "slidev day3/slides.md",
    "build:day1": "slidev build day1/slides.md --out ../dist/day1 --base /day1/",
    "build:day2": "slidev build day2/slides.md --out ../dist/day2 --base /day2/",
    "build:day3": "slidev build day3/slides.md --out ../dist/day3 --base /day3/",
    "build": "npm run build:day1 && npm run build:day2 && npm run build:day3"
  },
  "dependencies": {
    "@slidev/cli": "^52.2.4",
    "@slidev/theme-default": "latest",
    "@slidev/theme-seriph": "latest",
    "vue": "^3.5.21"
  }
}
